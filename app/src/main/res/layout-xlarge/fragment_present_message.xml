<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PresentCardTabs.CardMessage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="15dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/gift_msg_name_input"
            android:background="@drawable/inputbar"
            android:padding="10dp"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:hint="@string/sendername"
            android:textSize="25dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:id="@+id/gift_msg_phone_input"
            android:background="@drawable/inputbar"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:hint="@string/senderphone"
            android:textSize="25dp"
            android:inputType="phone" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:id="@+id/gift_msg_recever_name_input"
            android:background="@drawable/inputbar"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:hint="@string/recivername"
            android:textSize="25dp"
            android:inputType="textPersonName" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/gift_msg_message_input"
            android:background="@drawable/inputbar"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:hint="@string/msg"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gift_msg_save_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/savebtn"
        android:padding="20dp"
        android:layout_alignParentLeft="false" />

</RelativeLayout>
