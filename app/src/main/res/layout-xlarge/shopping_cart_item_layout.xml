<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="start">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="#f0f0f0"
            android:gravity="center|start">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="25.0 رس"
                android:id="@+id/cart_p_price"
                android:textSize="22dp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignTop="@+id/cart_del_btn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/imageView4"
                android:layout_toLeftOf="@+id/imageView4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="12/5/2017"
                    android:id="@+id/cart_p_date"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:layout_alignBottom="@+id/cart_del_btn"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#0b0b0b"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="بوكس توليب"
                    android:id="@+id/cart_product_name_tv"
                    android:textSize="22dp"
                    android:layout_alignBottom="@+id/cart_del_btn"
                    android:layout_toLeftOf="@+id/cart_del_btn"
                    android:layout_toStartOf="@+id/cart_del_btn"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/imagesize"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/cart_del_btn"
                android:layout_toStartOf="@+id/cart_del_btn"
                android:padding="2dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cart_del_btn"
                android:src="@drawable/deleteicon"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:orientation="vertical"
        android:background="#343434"
        android:gravity="start"></LinearLayout>
</LinearLayout>