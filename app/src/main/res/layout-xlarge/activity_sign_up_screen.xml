<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sedra.appsmatic.com.sedra.Activites.SignInScreen"
    android:background="#e2dcd0">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view">
        <android.support.v7.widget.Toolbar
            android:id="@+id/login_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_btn_login"
                    android:src="@drawable/homeicon"
                    android:padding="5dp"
                    android:layout_gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/login_tb_title"
                    android:text="@string/signuptitle"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:padding="5dp" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/signuplogo" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:padding="30dp"
        android:gravity="start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:id="@+id/signup_email_input"
            android:background="@drawable/inputbar"
            android:hint="@string/emailhint"
            android:padding="15dp"
            android:textSize="25dp"
            android:gravity="start"
            android:inputType="textEmailAddress" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:id="@+id/signup_username_input"
            android:layout_marginTop="10dp"
            android:background="@drawable/inputbar"
            android:hint="@string/username"
            android:textAlignment="viewStart"
            android:padding="15dp"
            android:textSize="25dp"
            android:gravity="start"
            android:password="false"
            android:inputType="textPersonName" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:id="@+id/signup_password_input"
            android:layout_marginTop="10dp"
            android:background="@drawable/inputbar"
            android:hint="@string/passwordhint"
            android:textAlignment="viewStart"
            android:padding="15dp"
            android:textSize="25dp"
            android:gravity="start"
            android:password="false"
            android:inputType="textPassword" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:id="@+id/signup_repassword_input"
            android:layout_marginTop="10dp"
            android:background="@drawable/inputbar"
            android:hint="@string/repassword"
            android:textAlignment="viewStart"
            android:padding="15dp"
            android:textSize="25dp"
            android:gravity="start"
            android:password="false"
            android:inputType="textPassword" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:id="@+id/signup_phone_input"
            android:layout_marginTop="10dp"
            android:background="@drawable/inputbar"
            android:hint="@string/phonenum"
            android:textAlignment="viewStart"
            android:padding="15dp"
            android:textSize="25dp"
            android:gravity="start"
            android:password="false"
            android:inputType="phone" />



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_btn"
            android:src="@drawable/signup_btn_arabic"
            android:layout_gravity="center"
            android:layout_marginTop="30dp" />

    </LinearLayout>

</RelativeLayout>