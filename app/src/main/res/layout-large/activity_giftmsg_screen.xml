<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sedra.appsmatic.com.sedra.Activites.SignInScreen"
    android:background="#e2dcd0">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view">
        <android.support.v7.widget.Toolbar
            android:id="@+id/login_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/login_tb_title"
                    android:text="@string/giftmsg"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:padding="5dp" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="15dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/gift_msg_name_input"
            android:background="@drawable/inputbar"
            android:padding="10dp"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:hint="@string/sendername"
            android:textSize="18dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/gift_msg_email_input"
            android:background="@drawable/inputbar"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:hint="@string/senderphone"
            android:textSize="18dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/gift_msg_phone_input"
            android:background="@drawable/inputbar"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:hint="@string/recivername"
            android:textSize="18dp"
            android:inputType="textPersonName" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/gift_msg_message_input"
            android:background="@drawable/inputbar"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:hint="@string/msg"
            android:textSize="18dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gift_msg_save_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/savebtn"
        android:padding="20dp" />

</RelativeLayout>
