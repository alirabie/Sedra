<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_margin="3dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/prouductimage"
        android:src="@drawable/imagessize"
        android:scaleType="fitXY"
        android:background="@drawable/mage_border_black"
        android:padding="2dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="50 SR"
        android:id="@+id/pricelable"
        android:layout_gravity="bottom|right"
        android:background="@drawable/pricelabel"
        android:padding="6dp"
        android:textSize="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sail_sign"
        android:layout_gravity="left|top"
        android:src="@drawable/sale_s"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp" />
</FrameLayout>
