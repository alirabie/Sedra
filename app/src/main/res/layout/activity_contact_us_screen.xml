<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sedra.appsmatic.com.sedra.Activites.SignInScreen"
    android:background="#e2dcd0">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="15dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/countact_name_input"
            android:background="@drawable/inputbar"
            android:padding="10dp"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:hint="@string/username"
            android:textSize="13dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/countact_email_input"
            android:background="@drawable/inputbar"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:hint="@string/emailhint"
            android:textSize="13dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/countact_phone_input"
            android:background="@drawable/inputbar"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:hint="@string/phonenum"
            android:textSize="13dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/countact_message_input"
            android:background="@drawable/inputbar"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:hint="@string/msg" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countact_send_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sendbtn_ar"
        android:padding="15dp" />

</RelativeLayout>
